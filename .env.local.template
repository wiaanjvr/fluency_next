# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# =============================================================================
# PAYMENT GATEWAYS
# =============================================================================

# Paystack Configuration (Recommended for African markets)
# Get these from: https://dashboard.paystack.com/#/settings/developer
# Test mode: pk_test_xxx, sk_test_xxx | Live mode: pk_live_xxx, sk_live_xxx
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxx
PAYSTACK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxx

# Paystack Plan Codes - Create at: https://dashboard.paystack.com/#/plans
NEXT_PUBLIC_PAYSTACK_PLAN_MONTHLY=PLN_xxxxxxxxxxxxx
NEXT_PUBLIC_PAYSTACK_PLAN_YEARLY=PLN_xxxxxxxxxxxxx


# Stripe Configuration (legacy - replaced by Paddle)
# Get these from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Optional: Speech-to-Text Services (for pronunciation analysis)
# OpenAI API (https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-...

# Deepgram API (https://console.deepgram.com/)
DEEPGRAM_API_KEY=...

# Optional: Analytics
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=yourdomain.com

# Optional: Error Monitoring
SENTRY_DSN=https://...@sentry.io/...
