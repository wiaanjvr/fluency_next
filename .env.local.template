# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Paddle Configuration (for payments)
# Get these from: https://sandbox-vendors.paddle.com/authentication (sandbox)
# or https://vendors.paddle.com/authentication (production)
NEXT_PUBLIC_PADDLE_CLIENT_TOKEN=your-paddle-client-token
PADDLE_WEBHOOK_SECRET=your-paddle-webhook-secret

# Paddle Price IDs - create these in the Paddle dashboard
# Products > Create Product > Add Price
NEXT_PUBLIC_PADDLE_PRICE_MONTHLY=pri_monthly_price_id
NEXT_PUBLIC_PADDLE_PRICE_YEARLY=pri_yearly_price_id

# Stripe Configuration (legacy - replaced by Paddle)
# Get these from: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Optional: Speech-to-Text Services (for pronunciation analysis)
# OpenAI API (https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-...

# Deepgram API (https://console.deepgram.com/)
DEEPGRAM_API_KEY=...

# Optional: Analytics
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=yourdomain.com

# Optional: Error Monitoring
SENTRY_DSN=https://...@sentry.io/...
